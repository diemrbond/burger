<div class="jumbotron jumbotron-fluid bg-danger mb-0 p-5">
    <div class="container text-center">
        {{!-- Gif provided by giphy: https://media0.giphy.com/media/60rUE5e0SYRPRl3vcS/giphy.gif --}}
        <img src="/assets/img/burger.gif" height=200>
        <h1 class="display-3 text-light"><strong>Eat the Burger!</strong></h1>
    </div>
</div>

<div class="container-fluid bg-light">
    <div class="container p-3 mb-3">
        <div class="input-group">
            <input type="text" id="addBurger" class="form-control"
                placeholder="Enter the name of a burger you'd like to eat and press 'Add Burger!'">
            <div class="input-group-append">
                <button class="btn btn-success" id="addBurgerBtn" type="button">Add Burger!</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h5>Available Burgers:</h5>
            {{#each burger}}
            {{#unless devoured}}
            <div class="burgers bg-light rounded p-2 mb-3" style="overflow: auto">
                <div class="float-left w-75">{{id}}. {{burger_name}}</div>
                <button data-id={{id}} class="btn btn-info eatBurger float-right" type="button">Devour!</button>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-6 text-left">
            <h5>Devoured Burgers:</h5>
            {{#each burger}}
            {{#if devoured}}
            <div class="burgers bg-dark text-white rounded p-2 mb-3" style="overflow: auto">
                <div class="float-left w-75">{{id}}. {{burger_name}}</div>
                <button data-id={{id}} class="btn btn-danger deleteBurger float-right" type="button" data-toggle="modal" data-target="#confirm"><i class="fa fa-trash"></i></button>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="modal" id="confirm" tabindex="-1" role="dialog" aria-labelledby="confirm" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmDelete">Are you sure you want to delete this burger?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button id="confirm-delete" type="button" class="btn btn-danger">Delete Burger</button>
      </div>
    </div>
  </div>
</div>